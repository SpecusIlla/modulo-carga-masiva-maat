# Configuración del Módulo de Carga v1.0.0
# Copiar a .env y ajustar valores según tu entorno

# Configuración de archivos
MAX_FILE_SIZE=104857600
MAX_CONCURRENT_UPLOADS=5
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,txt,csv,zip,rar,jpg,jpeg,png,gif

# Compresión
ENABLE_COMPRESSION=true
DEFAULT_COMPRESSION=gzip
COMPRESSION_LEVEL=6

# Seguridad
VIRUS_SCAN_ENABLED=true
QUARANTINE_ENABLED=true
ENABLE_CONTENT_VALIDATION=true

# Base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/maat_db

# Rutas de almacenamiento
UPLOAD_PATH=./uploads
QUARANTINE_PATH=./quarantine
TEMP_PATH=./temp

# Web Workers
ENABLE_WEB_WORKERS=true
HASH_CALCULATION_WORKER=true

# Streaming
ENABLE_STREAMING=true
CHUNK_SIZE=1048576

# Auditoría
ENABLE_AUDIT_LOGS=true
AUDIT_LOG_PATH=./audit-logs

# Performance
MEMORY_LIMIT=52428800
ENABLE_PERFORMANCE_MONITORING=true